<p id="notice"><%= notice %></p>
<%= form_for(@exam, url: choose_index_or_edit_or_new) do |f| %>
  <% if @exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= @exam.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @exam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control', maxlength: '13' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<br>